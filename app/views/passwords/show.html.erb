<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100 p-6">
    <div class="w-full max-w-md bg-white shadow-xl rounded-lg p-6 border border-gray-300">
        <div class="flex items-center justify-between mb-4">
            <h1 class="text-lg font-semibold text-gray-900">Saved Password</h1>
            <%= link_to "Edit", edit_password_path, class: "text-blue-600 hover:underline" %>

        </div>
        
        <div class="mb-4 border-b pb-4">
            <h6 class="text-sm font-semibold text-gray-600">Website</h6>
            <p class="text-gray-800 truncate"><%= @password.url %></p>
        </div>
        
        <div class="mb-4 border-b pb-4">
            <h6 class="text-sm font-semibold text-gray-600">Username / Email</h6>
            <p class="text-gray-800 truncate"><%= @password.username %></p>
        </div>
        
        <div class="mb-4 flex items-center justify-between">
            <div>
                <h6 class="text-sm font-semibold text-gray-600">Password</h6>
                <p class="text-gray-800 truncate"><%=@password.password%></p>
            </div>
           
        </div>
        
        <div class="flex justify-end mt-4">
           
        </div>
    </div>
</div>
