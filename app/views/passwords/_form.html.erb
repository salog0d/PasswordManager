<%= form_with model: @password, local: true, class: "max-w-md mx-auto bg-white p-6 rounded-lg shadow-lg space-y-4" do |f| %>

    <% if f.object.errors.any? %>
      <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-3 rounded-md">
        <ul>
          <% f.object.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="flex flex-col">
      <%= f.label :url, class: "text-gray-700 font-semibold mb-1" %>
      <%= f.text_field :url, class: "w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
    </div>
  
    <div class="flex flex-col">
      <%= f.label :username, class: "text-gray-700 font-semibold mb-1" %>
      <%= f.text_field :username, class: "w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
    </div>
  
    <div class="flex flex-col">
      <%= f.label :password, class: "text-gray-700 font-semibold mb-1" %>
      <%= f.password_field :password, class: "w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
    </div>
  
    <div>
      <%= f.submit "Save", class: "w-full bg-blue-600 text-white font-bold py-2 px-4 rounded-lg hover:bg-blue-700 transition" %>
      <%= button_tag "Delete", form: "delete_password", class: "w-full bg-blue-600 text-white font-bold py-2 px-4 rounded-lg hover:bg-blue-700 transition" %>

    </div>
  
  <% end %>

  <%= form_with model: @password, method: :delete, id: "delete_password", data: {turbo_confirm: "Are you sure"}%>
  