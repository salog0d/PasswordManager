<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100 p-6">
    <div class="w-full max-w-md bg-white shadow-xl rounded-lg p-6 border border-gray-300">
        <div class="flex items-center justify-between mb-4">
            <h1 class="text-lg font-semibold text-gray-900">Password Manager</h1>
            <%= link_to "New Password", new_password_path, class: "text-blue-600 hover:underline" %>
        </div>
        
        <div class="space-y-4">
            <%= @passwords.each do |password| %>
                <div class="border-b pb-4">
                    <h6 class="text-sm font-semibold text-gray-600">Website</h6>
                    <p class="text-gray-800 truncate"><%= password.url %></p>
                </div>
            <% end %>
        </div>
        
        <div class="flex justify-end mt-4">
        </div>
    </div>
</div>