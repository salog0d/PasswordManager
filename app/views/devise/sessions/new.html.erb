<h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Log in</h2>

<div class="max-w-md mx-auto bg-white p-6 rounded-2xl shadow-lg">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-4") do |f| %>
    <div class="flex flex-col">
      <%= f.label :email, class: "text-gray-700 font-semibold mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password, class: "text-gray-700 font-semibold mb-1" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center space-x-2">
        <%= f.check_box :remember_me, class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <%= f.label :remember_me, class: "text-gray-700" %>
      </div>
    <% end %>

    <div>
      <%= f.submit "Log in", class: "w-full bg-blue-600 text-white font-bold py-2 px-4 rounded-lg hover:bg-blue-700 transition" %>
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
